                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="110*"/>
                            </Grid.RowDefinitions>
                            <!-- Header -->
                            <Grid Grid.Row="0">
                                <Border Background="#FF434752">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1" Direction="315" />
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30*"></ColumnDefinition>
                                            <ColumnDefinition Width="90*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0">
                                            <Image HorizontalAlignment="Left" Margin="40,10,10,10" Source="/Images/logo_mp_white.png"></Image>
                                            <Label x:Name="LblCurrentPage" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Grid.Column="0" >
                                                <Label.Content>
                                                    <Binding Path="CurrentPage" Source="{x:Static Application.Current}"/>
                                                </Label.Content>
                                            </Label>
                                        </Grid>


                                        <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*"></ColumnDefinition>
                                                <ColumnDefinition Width="90*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label x:Name="LblCurrentUser"  VerticalAlignment="Center"  FontSize="16"  Foreground="White" Grid.Column="0" >
                                                <Label.Content>
                                                    <Binding Path="CurrentUser" Source="{x:Static Application.Current}"/>
                                                </Label.Content>
                                            </Label>
                                            <Button x:Name="btnLogout"  VerticalAlignment="Center"  Content="Logout" FontSize="20" Grid.Column="1" Margin="10,10,30,10" Padding="15,5,15,5" Background="#FF50A2FF" BorderBrush="{x:Null}" Foreground="White" Click="btnLogout_Click"></Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="15*"/>
                                    <RowDefinition Height="110*"/>
                                    <RowDefinition Height="25*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Background="White" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="10*"></ColumnDefinition>
                                            <ColumnDefinition Width="90*"></ColumnDefinition>
                                            <ColumnDefinition Width="10*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Image x:Name="imgEventLogo" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="40,20,0,0" Source="/Images/icon_event_primary.png" Stretch="Uniform" StretchDirection="Both"></Image>
                                        <Label x:Name="lblEventName" Grid.Row="0" Grid.Column="1"  VerticalAlignment="Bottom"  HorizontalAlignment="Left"   Foreground="#FF2489FF"  FontSize="15" >
                                            <Label.Content>
                                                <Binding Path="CurrentEvent" Source="{x:Static Application.Current}"/>
                                            </Label.Content>
                                        </Label>
                                        <Label x:Name="lblEventDateLocation" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left"  FontSize="10" Foreground="#FF8A8A8A" >
                                            <Label.Content>
                                                <Binding Path="CurrentEventLocation" Source="{x:Static Application.Current}"/>
                                            </Label.Content>
                                        </Label>

                                    </Grid>
                                </Border>
                                <Grid Grid.Row="1" x:Name="gdrContent">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="30*"></ColumnDefinition>
                                        <ColumnDefinition Width="60*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <Border Margin="40,20,40,40" Grid.Column="1"  Background="White" >
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="1" Direction="315" />
                                        </Border.Effect>
                                        <ContentPresenter Grid.Column="1"  />
                                    </Border>
                                </Grid>


                                <Grid Grid.Row="2"  HorizontalAlignment="Right">
                                    <WrapPanel Margin="30">
                                        <Button x:Name="btnCancel" Content="CANCEL" FontSize="20" Padding="15,5,15,5" Margin="10,10,30,10"   HorizontalAlignment="Right" VerticalAlignment="Center"  Foreground="White"  BorderBrush="{x:Null}"  Background="#FFD3D4D6" Click="btnCancel_Click"  ></Button>
                                        <Button x:Name="btnNext"  Content="NEXT"   FontSize="20" Padding="15,5,15,5" Margin="10,10,30,10"   HorizontalAlignment="Right" VerticalAlignment="Center" Background="#FF50A2FF" BorderBrush="{x:Null}" Foreground="White" Click="btnNext_Click" >
                                            <Button.BitmapEffect>
                                                <DropShadowBitmapEffect ShadowDepth="1" Direction="315" />
                                            </Button.BitmapEffect>
                                        </Button>
                                    </WrapPanel>

                                </Grid>
                            </Grid>
                            <!-- Body -->
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="EventBorderStyle"  TargetType="custom:EventControl">
                <Setter Property="BorderThickness"  Value="2" />
                <Setter Property="Background"  Value="Transparent" />
                <Setter Property="Margin"  Value="10" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#FF1FE6A5" />
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="BorderBrush" Value="#FF1FE6A5" />
                    </Trigger>
            </Style.Triggers>
            </Style>


        <Style x:Key="LogBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness"  Value="2" />
            <Setter Property="Background"  Value="Transparent" />
            <Setter Property="CornerRadius"  Value="0" />
            <Setter Property="Margin"  Value="10" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF50A2FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ChecBoxPrinterStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Border x:Name="bdrOutside" Background="Transparent" BorderBrush="#FF8A8A8A"  Margin="0" BorderThickness="2">
                            <StackPanel Orientation="Horizontal">
                                <Image x:Name="imageCheckBox" Source="/Images/icon_printer_primary.png" Width="30" Height="30" Margin="10" />
                                <ContentPresenter VerticalAlignment="Center" Margin="10"  />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bdrOutside" Property="BorderBrush" Value="#FF1FE6A5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Margin" Value="10"/>
        </Style>

