<Application x:Class="MeetpointPrinterNew.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MeetpointPrinterNew"
             xmlns:custom="clr-namespace:MeetpointPrinterNew.CustomControls"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <Style x:Key="HeaderFooterPageStyle" TargetType="Page">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Page}">
                        <Grid Background="#FFEFEFEF" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="110*"/>
                            </Grid.RowDefinitions>
                            <!-- Header -->
                            <Grid Grid.Row="0">
                                <Border Background="#FF434752">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="1" Direction="315" />
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30*"></ColumnDefinition>
                                            <ColumnDefinition Width="90*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0">
                                            <Image HorizontalAlignment="Left" Margin="40,10,10,10" Source="/Images/logo_mp_white.png"></Image>
                                            <Label x:Name="LblCurrentPage" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Grid.Column="0" >
                                                <Label.Content>
                                                    <Binding Path="CurrentPage" Source="{x:Static Application.Current}"/>
                                                </Label.Content>
                                            </Label>
                                        </Grid>
                                       

                                        <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="30*"></ColumnDefinition>
                                                <ColumnDefinition Width="90*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label x:Name="LblCurrentUser"  VerticalAlignment="Center"  FontSize="16"  Foreground="White" Grid.Column="0" >
                                                <Label.Content>
                                                    <Binding Path="CurrentUser" Source="{x:Static Application.Current}"/>
                                                </Label.Content>
                                            </Label>
                                            <Button x:Name="btnLogout"  VerticalAlignment="Center"  Content="Logout"  Grid.Column="1"  Margin="10,10,30,10"  FontSize="20" Padding="15,5,15,5" Background="#FF50A2FF" BorderBrush="{x:Null}" Foreground="White" Click="btnLogout_Click"></Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            <!-- Body -->
                            <ContentPresenter Grid.Row="1"/>


                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderFooterSettingsPageStyle" TargetType="Page">
