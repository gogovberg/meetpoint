<Application x:Class="MeetpointPrinterNew.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MeetpointPrinterNew"
             StartupUri="Pages/LoginPage.xaml">
    <Application.Resources>
        <Style x:Key="HeaderFooterWindowStyle" TargetType="Window">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Window}">
                        <Grid Background="#FFEFEFEF" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10*"/>
                                <RowDefinition Height="110*"/>
                            </Grid.RowDefinitions>
                            <!-- Header -->
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30*"></ColumnDefinition>
                                    <ColumnDefinition Width="90*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#FF434752">
                                    <Image Margin="10" Source="/Images/meetpoint-admin-logo.png"></Image>
                                </Border>
                                <Border  Grid.Column="1" Background="#FF434752">
                                    <Grid>
                                        <Label x:Name="LblCurrentPage" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Grid.Column="0" >
                                            <Label.Content>
                                                <Binding Path="CurrentPage" Source="{x:Static Application.Current}"/>
                                            </Label.Content>
                                        </Label>

                                        <Grid Margin="10"  HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50*"></ColumnDefinition>
                                                <ColumnDefinition Width="50*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label x:Name="LblCurrentUser"    VerticalAlignment="Center"  Foreground="White" Grid.Column="0" >
                                                <Label.Content>
                                                    <Binding Path="CurrentUser" Source="{x:Static Application.Current}"/>
                                                </Label.Content>
                                            </Label>
                                            <Button x:Name="btnLogout"  VerticalAlignment="Center"  Content="Logout" Grid.Column="1" Margin="10"  Background="#FF50A2FF" BorderBrush="{x:Null}" Foreground="White" Click="btnLogout_Click"></Button>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>
                            <!-- Body -->
                            <ContentPresenter Grid.Row="1"/>


                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EventBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness"  Value="2" />
            <Setter Property="Background"  Value="Transparent" />
            <Setter Property="CornerRadius"  Value="0" />
            <Setter Property="Margin"  Value="10" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF1FE6A5" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
