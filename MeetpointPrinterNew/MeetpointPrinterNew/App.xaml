                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Image Grid.Column="0"  Source="/Images/qr.jpg" Stretch="UniformToFill" Width="30" Height="30"  Margin="5"></Image>
