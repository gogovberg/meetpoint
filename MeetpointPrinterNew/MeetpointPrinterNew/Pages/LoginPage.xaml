<Page x:Name="EventLogin" x:Class="MeetpointPrinterNew.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MeetpointPrinterNew.Pages"
      mc:Ignorable="d" 
       d:DesignHeight="900" d:DesignWidth="1200"
       Title="Login"  Background="#FFEFEFEF" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Background="White" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Direction="315" />
            </Border.Effect>
            <StackPanel>
                <Image x:Name="imgLogo" HorizontalAlignment="Left"  Margin="40,40,40,0" VerticalAlignment="Top"  Source="/Images/logo_mp.png"  Stretch="Fill"/>
                <Label x:Name="lblLogin" FontSize="15" Content="LOGIN" Margin="40,20,40,0" />
                <Label x:Name="lblLoginDesc" FontSize="10" Content="Use your MeetPoint application credentials to login." Margin="40,0" />
                <Label x:Name="lblUsername" FontSize="12" Content="Username" Margin="40,20,40,0" />
                <TextBox x:Name="tbUsername" Margin="40,0" Height="30" VerticalContentAlignment="Center" ></TextBox>
                <Label x:Name="lblPassword" FontSize="12" Content="Password" Margin="40,20,40,0" />
                <PasswordBox x:Name="tbPassword" Margin="40,0" Height="30" VerticalContentAlignment="Center"></PasswordBox>
                <Button x:Name="btnLogin" Margin="40,20,40,0" Height="30" Content="LOGIN" Background="#FF50A2E1" Foreground="White" BorderBrush="{x:Null}" Click="btnLogin_Click"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
