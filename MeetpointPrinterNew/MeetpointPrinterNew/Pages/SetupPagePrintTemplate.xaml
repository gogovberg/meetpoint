<Page x:Class="MeetpointPrinterNew.Pages.SetupPagePrintTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MeetpointPrinterNew.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1200"  Style="{StaticResource HeaderFooterSettingsPageStyle}"
      Title="PrintSetupPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gdrLabelTemplate" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="40*"></RowDefinition>
                <RowDefinition Height="50*"></RowDefinition>
                <RowDefinition Height="40*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Margin="40,0,0,0" x:Name="lblPrintingDevice" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"></Label>
            <StackPanel Grid.Row="1" Orientation="Vertical">
                <Label Margin="40,0,40,0" FontSize="16" Content="Label size" ></Label>
                <Label Margin="40,0,40,0" FontSize="12" Foreground="#FF8A8A8A" Content="Size in nm." ></Label>
                <WrapPanel Margin="30,0,30,0" >
                    <CheckBox x:Name="cbHunderd"    Margin="10" Content="500 x 100" Style="{StaticResource CheckBoxTemplateSizeStyle}" Checked="cbHunderd_Checked" ></CheckBox>
                    <CheckBox x:Name="cbOneHunderd" Margin="10" Content="500 x 200" Style="{StaticResource CheckBoxTemplateSizeStyle}" Checked="cbOneHunderd_Checked" ></CheckBox>
                    <CheckBox x:Name="cbTwoHunderd" Margin="10" Content="500 x 300" Style="{StaticResource CheckBoxTemplateSizeStyle}" Checked="cbTwoHunderd_Checked" ></CheckBox>
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <Label Margin="40,0,40,0" FontSize="16" Content="Layout" ></Label>
                <WrapPanel Margin="30,0,30,0" >
                    <CheckBox x:Name="cbLayoutHL"  Margin="10"  Style="{StaticResource CheckBoxTemplateLayoutStyleHL}"   Checked="cbLayoutHL_Checked"></CheckBox>
                    <CheckBox x:Name="cbLayoutQLT" Margin="10"  Style="{StaticResource CheckBoxTemplateLayoutStyleQLT}"  Checked="cbLayoutQLT_Checked"></CheckBox>
                    <CheckBox x:Name="cbLayoutQLB" Margin="10"  Style="{StaticResource CheckBoxTemplateLayoutStyleQLB}"  Checked="cbLayoutQLB_Checked"></CheckBox>
                    <CheckBox x:Name="cbLayoutHR"  Margin="10"  Style="{StaticResource CheckBoxTemplateLayoutStyleHR}"   Checked="cbLayoutHR_Checked"></CheckBox>
                    <CheckBox x:Name="cbLayoutQRT" Margin="10"  Style="{StaticResource CheckBoxTemplateLayoutStyleQRT}"  Checked="cbLayoutQRT_Checked"></CheckBox>
                    <CheckBox x:Name="cbLayoutQRB" Margin="10"  Style="{StaticResource CheckBoxTemplateLayoutStyleQRB}"  Checked="cbLayoutQRB_Checked"></CheckBox>
                </WrapPanel>
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Vertical">
                <Label Margin="40,0,0,0" FontSize="16" Content="Data" ></Label>
                <Label Margin="40,0,0,0" FontSize="12" Foreground="#FF8A8A8A" Content="You can select 3 options." ></Label>
                <Grid  Margin="40,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <CheckBox x:Name="cbName" Content="Ime"      FontSize="14" Checked="cbName_Checked"></CheckBox>
                        <CheckBox x:Name="cbSurName" Content="Priimek"  FontSize="14" Checked="cbSurName_Checked"></CheckBox>
                        <CheckBox x:Name="cbCompanyName" Content="Podjetje" FontSize="14" Checked="cbCompanyName_Checked"></CheckBox>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <CheckBox x:Name="cbFunctionName" Content="Funkcija" FontSize="14" Checked="cbFunctionName_Checked"></CheckBox>
                        <CheckBox x:Name="cbCountryName" Content="Drzava"   FontSize="14" Checked="cbCountryName_Checked"></CheckBox>
                        <CheckBox x:Name="cbGroupName" Content="Skupina"  FontSize="14" Checked="cbGroupName_Checked"></CheckBox>
                    </StackPanel>
                </Grid>
             </StackPanel>
           
        </Grid>
        <Grid x:Name="gdrPreview" Grid.Column="1" Background="#E5E5E5" >
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="30*"></RowDefinition>
                <RowDefinition Height="100*"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Margin="40,0,0,0" Content="PRIVEW" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left"></Label>
            <Border Grid.Row="1" Margin="40,0,40,0" Background="#28434752">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="4*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Image VerticalAlignment="Center" Margin="10" Source="/Images/icon_search.png" HorizontalAlignment="Center" Grid.Column="0"></Image>
                    <TextBlock Grid.Column="1" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Please select some options on the left for preview to start forming."></TextBlock>
                </Grid> 
            </Border>
            <Border x:Name="bdrPreview" Grid.Row="2" Margin="40,40,40,40" Background="#FFFFFFFF">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Margin="5" Grid.Row="1" BorderBrush="Black" BorderThickness="1" >
                        <Grid x:Name="gdrContentPreview"   >
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Grid.RowSpan="2" x:Name="imgPrvQRCode" Source="/Images/icon_qr_code_big.png" Margin="10" ></Image>
                            <StackPanel x:Name="spDataOptions" Grid.Column="1" Grid.RowSpan="2" Margin="10">
                                <TextBlock x:Name="tbOption1" Text="option 1"></TextBlock>
                                <TextBlock x:Name="tbOption2" Text="option 1"></TextBlock>
                                <TextBlock x:Name="tbOption3" Text="option 1"></TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                </Grid>
               
            </Border>
            
        </Grid>
        
    </Grid>
</Page>
