<Page x:Class="MeetpointPrinterNew.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MeetpointPrinterNew.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="787" d:DesignWidth="1315"  
      Title="PrintSettingsPage">
    <Grid>
        <Grid Background="#FFEFEFEF" >
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="110*"/>
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="0">
                <Border Background="#FF434752">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="1" Direction="315" />
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30*"></ColumnDefinition>
                            <ColumnDefinition Width="90*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0">
                            <Image HorizontalAlignment="Left" Margin="40,10,10,10" Source="/Images/logo_mp_white.png"></Image>
                        </Grid>

                        <Grid HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"></ColumnDefinition>
                                <ColumnDefinition Width="90*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="LblCurrentUser"  VerticalAlignment="Center"  FontSize="16"  Foreground="White" Grid.Column="0" >
                                <Label.Content>
                                    <Binding Path="CurrentUser" Source="{x:Static Application.Current}"/>
                                </Label.Content>
                            </Label>
                            <Button x:Name="btnLogout"  VerticalAlignment="Center"  Content="Logout" Padding="4" FontSize="20" Grid.Column="1" Margin="10,10,30,10" Background="#FF50A2FF" BorderBrush="{x:Null}" Foreground="White" Click="btnLogout_Click">
                                
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="23*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="135*"/>
                </Grid.RowDefinitions>
      
                <Border Grid.Row="0" Background="White" Grid.ColumnSpan="2" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"></ColumnDefinition>
                            <ColumnDefinition Width="90*"></ColumnDefinition>
                            <ColumnDefinition Width="10*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Image x:Name="imgEventLogo" Grid.Row="0" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="40,20,0,0" Source="/Images/icon_event_primary.png" Stretch="Uniform" StretchDirection="Both"></Image>
                        <Label x:Name="lblEventName" Grid.Row="0" Grid.Column="1"  VerticalAlignment="Bottom"  HorizontalAlignment="Left"   Foreground="#FF2489FF"  FontSize="15" >
                            <Label.Content>
                                <Binding Path="CurrentEvent" Source="{x:Static Application.Current}"/>
                            </Label.Content>
                        </Label>
                        <Label x:Name="lblEventDateLocation" Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left"  FontSize="10" Foreground="#FF8A8A8A" >
                            <Label.Content>
                                <Binding Path="CurrentEventLocation" Source="{x:Static Application.Current}"/>
                            </Label.Content>
                        </Label>

                    </Grid>
                </Border>
              
                <Grid Grid.Row="1" x:Name="gdrContent" Grid.ColumnSpan="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"></ColumnDefinition>
                        <ColumnDefinition Width="70*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"></RowDefinition>
                        <RowDefinition Height="20*"></RowDefinition>
                        <RowDefinition Height="30*"></RowDefinition>
                        <RowDefinition Height="40*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock x:Name="tblPrintSettings" Text="PRINT SETTINGS"  Margin="40,10,10,10" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextBlockTitle}"></TextBlock>
                    <TextBlock x:Name="tblPrintActivation" Text="PRINT ACTIVATION" Margin="40,10,10,10"  Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBlockTitle}"></TextBlock>
                    <Border Margin="40,10,10,10" Grid.Row="1" Grid.Column="0" Style="{StaticResource BorderSettings}" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="tblPrintingDevice" Margin="40,0,0,0" VerticalAlignment="Center" Text="SELECTED PRINTING DEVICE" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextBlockSubtitle}"></TextBlock>
                            <StackPanel Margin="40,0,0,10"  Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                                <Image HorizontalAlignment="Left" Source="/Images/icon_printer.png"  Grid.Row="1" Grid.Column="0"/>
                                <TextBlock x:Name="tblPrinterName" Margin="20,10,10,10" Text="Printer name 1" Grid.Row="1" Grid.Column="0" Style="{StaticResource TextBlockSubtitle}"/>
                            </StackPanel>
                            <Button x:Name="btnEditPrinter" Grid.Row="0" Grid.Column="1" Click="btneditPrinter_Click"  ></Button>
                        </Grid>
                    </Border>
                    <Border Margin="40,10,10,10" Grid.Row="2" Grid.Column="0" Style="{StaticResource BorderSettings}" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="tblAccountsTitle" Margin="40,0,0,0" VerticalAlignment="Center" Text="SELECTED PRINTING DEVICE" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextBlockSubtitle}"></TextBlock>
                            <ItemsControl x:Name="icAccountItem" Grid.Row="1" Grid.RowSpan="2" Margin="30" >
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.Template>
                                    <ControlTemplate>
                                        <ScrollViewer x:Name="ScrollViewer" Padding="{TemplateBinding Padding}">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                            </ItemsControl>
                            <Button x:Name="btnEditAccount" Grid.Row="0" Grid.Column="1" Click="btnEditAccount_Click"   ></Button>
                        </Grid>
                    </Border>
                    <Border Margin="40,10,10,10" Grid.Row="3" Grid.Column="0" Style="{StaticResource BorderSettings}" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40*"></ColumnDefinition>
                                <ColumnDefinition Width="10*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="tblTemplateTitle" Margin="40,0,0,0" VerticalAlignment="Center" Text="SET TEMPLATE" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextBlockSubtitle}"></TextBlock>
                            <Button x:Name="btnEditTemplate" Grid.Row="0" Grid.Column="1" Click="btnEditTemplate_Click"  ></Button>
                        </Grid>
                    </Border>
                    <Border Margin="40,10,10,10" Grid.Row="1" Grid.Column="1" Style="{StaticResource BorderSettings}" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"></ColumnDefinition>
                                <ColumnDefinition Width="60*"></ColumnDefinition>
                                <ColumnDefinition Width="30*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="tblLivePrint" FontSize="16" Text="Live print" Grid.Column="0" Foreground="Black"   HorizontalAlignment="Center" VerticalAlignment="Center"  ></TextBlock>
                            <Border  Grid.Column="1" Background="#FFF8F8F8" Margin="20" >
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox x:Name="cbInactive" FontSize="16" HorizontalAlignment="Center" Foreground="Black" VerticalAlignment="Center" Content="Inactive" Checked="cbInactive_Checked"></CheckBox>
                                    <CheckBox x:Name="cbActive" FontSize="16" HorizontalAlignment="Center" Foreground="Black" VerticalAlignment="Center" Content="Active" Checked="cbActive_Checked"></CheckBox>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                    <Grid Grid.Column="1" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button x:Name="btnPrintEmpty" Content="PRINT EMPTY LABEL" FontSize="16" Grid.Column="0" Grid.Row="0"  Margin="40,10,10,10" Background="#FF50A2FF" Foreground="white" Click="btnPrintEmpty_Click" ></Button>
                        <Button x:Name="btnPrintTest" Content="PRINT TEST TEMPLATE" FontSize="16" Grid.Column="1" Grid.Row="0"  Margin="10,10,10,10" Background="#FF50A2FF" Foreground="white" Click="btnPrintTest_Click" ></Button>
                        <Button x:Name="btnViewLog" Content="View print log" FontSize="16" Grid.Column="2" Grid.Row="0"  Margin="10,10,10,10" Background="#FFAFAFAF" Foreground="white" Click="btnViewLog_Click" ></Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
