<UserControl x:Class="MeetpointPrinterNew.CustomControls.LogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetpointPrinterNew.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1500">
    <Grid>
        <Border Background="White" CornerRadius="8" Style="{StaticResource EventBorderStyle}">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Direction="315"></DropShadowEffect>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image  Source="/Images/calendar.png" Margin="10" Width="100" Height="50"></Image>
                    <TextBlock  Text="Name Surname" VerticalAlignment="Center" FontSize="30" FontStretch="Normal" TextWrapping="Wrap"  HorizontalAlignment="Left" Margin="10"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Image  Source="/Images/calendar.png" Margin="10" Width="100" Height="50"></Image>
                    <TextBlock  Text="Status" VerticalAlignment="Center" FontSize="30" FontStretch="Normal" TextWrapping="Wrap"  HorizontalAlignment="Left" Margin="10"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="2"  Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Margin="10"   Content="PRIVEW LABEL" ></Button>
                    <Button Margin="10"   Content="PRIVEW LABEL" ></Button>
                </StackPanel>
            </Grid>
        </Border>
       
    </Grid>
</UserControl>
