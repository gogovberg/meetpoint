<UserControl x:Class="MeetpointPrinterNew.CustomControls.TextBlockImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetpointPrinterNew.CustomControls"
             Height="67" Width="340">
    <Grid Cursor="Hand">
        <Border MouseUp="TextBlockImageBorder_MouseUp" MouseDown="TextBlockImageBorder_MouseDown" Style="{StaticResource TextBlockImagePanel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20*"></ColumnDefinition>
                    <ColumnDefinition Width="70*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Image x:Name="imgContentImage" Grid.Column="0" Margin="27,17,0,15" Source="/Images/icon_user_primary.png"></Image>
                <TextBlock x:Name="tblContentText" Foreground="#FF1581FB" FontWeight="SemiBold" FontSize="18" Grid.Column="1" Margin="21,21,0,22" Text="Account name 1"></TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>
